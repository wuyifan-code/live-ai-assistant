# ===========================================
# 生产环境配置模板
# 复制此文件为 .env 并填入实际值
# ===========================================

# ============ Redis 配置 ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=100

# ============ 向量数据库配置 ============
# 提供商: supabase / pinecone / weaviate
VECTOR_DB_PROVIDER=supabase
EMBEDDING_DIMENSIONS=1024

# Supabase 配置
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Pinecone 配置 (可选)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west-2

# ============ 直播平台配置 ============
# 平台: douyin / kuaishou / taobao
LIVE_PLATFORM=douyin

# 抖音开放平台配置
DOUYIN_APP_ID=your-douyin-app-id
DOUYIN_APP_SECRET=your-douyin-app-secret

# 快手开放平台配置 (可选)
KUAISHOU_APP_ID=your-kuaishou-app-id
KUAISHOU_APP_SECRET=your-kuaishou-app-secret

# 淘宝开放平台配置 (可选)
TAOBAO_APP_KEY=your-taobao-app-key
TAOBAO_APP_SECRET=your-taobao-app-secret

# ============ 告警配置 ============
# 飞书告警
ENABLE_FEISHU_ALERT=true
FEISHU_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/your-webhook-token

# 企业微信告警 (可选)
ENABLE_WECHAT_ALERT=false
WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-key

# 邮件告警 (可选)
ENABLE_EMAIL_ALERT=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
ALERT_EMAIL=alert@example.com

# ============ 数据库配置 ============
DATABASE_URL=postgresql://user:password@localhost:5432/live_ai_db

# ============ LLM 配置 ============
# 使用 Coze 平台，无需配置
# 如需使用其他平台，请配置以下参数
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_API_BASE=https://api.openai.com/v1

# ============ 系统配置 ============
DEBUG=false
LOG_LEVEL=INFO
MAX_WORKERS=4
REQUEST_TIMEOUT=30

# ============ 功能开关 ============
# 启用视觉识别
ENABLE_VISUAL_RECOGNITION=true
# 启用TTS语音输出
ENABLE_TTS_OUTPUT=true
# 启用RAG知识库
ENABLE_RAG_KNOWLEDGE=true
# 启用人机协作
ENABLE_HUMAN_COLLABORATION=true

# ============ 监控配置 ============
# Prometheus 监控
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090

# ============ 安全配置 ============
# API密钥
API_SECRET_KEY=your-secret-key-here
# JWT密钥
JWT_SECRET_KEY=your-jwt-secret-key
# 允许的IP白名单（逗号分隔）
ALLOWED_IPS=127.0.0.1,::1
