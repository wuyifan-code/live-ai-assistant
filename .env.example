# 直播AI助手环境变量配置示例
# 复制此文件为 .env 并填入实际配置值

# ============================================
# Supabase 数据库配置
# ============================================
COZE_SUPABASE_URL=https://your-project.supabase.co
COZE_SUPABASE_ANON_KEY=your-anon-key

# ============================================
# Redis 缓存配置（可选）
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# 抖音直播配置
# ============================================
DOUYIN_APP_ID=your_douyin_app_id
DOUYIN_APP_SECRET=your_douyin_app_secret
DOUYIN_ROOM_ID=your_douyin_room_id

# ============================================
# 快手直播配置
# ============================================
KUAISHOU_APP_ID=your_kuaishou_app_id
KUAISHOU_APP_SECRET=your_kuaishou_app_secret
KUAISHOU_ROOM_ID=your_kuaishou_room_id

# ============================================
# 淘宝直播配置
# ============================================
TAOBAO_APP_KEY=your_taobao_app_key
TAOBAO_APP_SECRET=your_taobao_app_secret
TAOBAO_SESSION=your_taobao_session

# ============================================
# AI 模型配置
# ============================================
COZE_WORKLOAD_IDENTITY_API_KEY=your-api-key
COZE_INTEGRATION_MODEL_BASE_URL=https://api.example.com

# ============================================
# 弹幕处理配置
# ============================================
DANMAKU_MAX_QUEUE_SIZE=100
DANMAKU_DEDUP_TIME_WINDOW=30
DANMAKU_MAX_RECENT_MESSAGES=5

# ============================================
# 监控和告警配置
# ============================================
MONITOR_WEBHOOK_URL=https://your-webhook-url.com/notify
MONITOR_EMAIL=admin@example.com
MONITOR_PHONE=+8613800138000

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# ============================================
# WebSocket 重连配置
# ============================================
WEBSOCKET_MAX_RETRIES=5
WEBSOCKET_RETRY_DELAY=3
WEBSOCKET_HEARTBEAT_INTERVAL=30
